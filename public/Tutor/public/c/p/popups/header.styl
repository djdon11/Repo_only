.popup
  header
    bb 1px solid m20
    bg m28
    background linear-gradient(top, m39, m35 50%, m29 50%, m25)
    border-radius 4px 4px 0 0
    box-shadow b25 0 3px 1px

    ul 
      clearfix()
      bb 1px solid m39
      h 38px
      bxs()
      li
        fl()
        &.title
          hide-text()
          w 220px
          h 37px
          bgr no-repeat
        &.name
          float none
          absolute top 0 left 0
          w 100%
          ta center
          f bold 13px/37px sans
          aa()
          c #fff
        &.exit
          a.exit
            d block
            r 25px
            hide-text()
            cursor pointer
            absolute top 7px right 7px
            bg url(../i/popups/exit.png)
            box-shadow w7 0 1px 0
            border-radius 3px
            &:hover, &:focus
              bgp 0 -25px
            &:active, &.active
              bgp 0 -50px
