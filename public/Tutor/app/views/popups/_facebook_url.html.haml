%form.popup.window.profile.facebook.url
  %header
    %ul
      %li.title Facebook
      %li.exit
        %a.exit{:href => "#"} Exit
  .content
    %ul.rows
      %li.row.label
        %label Write or paste your Facebook URL below.
        .help
          %span.icon ?
          %span.ui-tooltip-bottom Enter or paste your Facebook web URL below so your fans be linked directly to your Facebook page.
      %li.row.big.url
        %label Facebook URL
        %input{:placeholder => "www.facebook.com/yourpage", :type => "text"}
          .help
            %span.icon ?
            %span.ui-tooltip-bottom Enter your Facebook web URL below.
  %footer
    %ul
      %li
        %a.save Save
      %li
        %a.cancel Cancel